<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvitationDetailsActivity">

    <RadioGroup android:id="@+id/toggleGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        >

        <ToggleButton android:id="@+id/btn_accept"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textOn="Going"
            android:textOff="Going"
            android:onClick="onToggle"
            android:checked="true"
            />

        <ToggleButton android:id="@+id/btn_pending"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textOn="Pending"
            android:textOff="Pending"
            android:onClick="onToggle"
            android:checked="true"
            />
        <ToggleButton android:id="@+id/btn_decline"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textOn="Decline"
            android:textOff="Decline"
            android:onClick="onToggle"
            />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>