<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup_window"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
            android:id="@+id/add_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Add item"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="@color/startblue"
            android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/item_edit_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:hint="Enter item name"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#737373"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/price_edit_view"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:hint="$00.00"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_new_item"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/mybutton"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Cancel"
            android:textColor="#fff" />

        <Button
            android:id="@+id/submit_new_item"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/mybutton"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Add new item"
            android:textColor="#fff" />

    </LinearLayout>



    </LinearLayout>